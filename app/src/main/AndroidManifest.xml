<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Blog"
        tools:targetApi="31">
        <activity
            android:name=".views.EditBlogActivity"
            android:exported="false" />
        <activity
            android:name=".views.ArticlesActivity"
            android:exported="false" />
        <activity
            android:name=".views.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".views.SavedArticlesActivity"
            android:exported="false" />
        <activity
            android:name=".views.ReadMoreActivity"
            android:exported="false" />
        <activity
            android:name=".views.AddArticleActivity"
            android:exported="false" />
        <activity
            android:name=".views.register.SignInAndRegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".views.register.WelcomeActivity"
            android:exported="true"
            android:theme="@style/MySplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>